# DealRadarUS - URL Structure & SEO Optimization
# Generated by URL structure cleanup script

RewriteEngine On

# Security headers
Header always set X-Content-Type-Options nosniff
Header always set X-Frame-Options DENY
Header always set X-XSS-Protection "1; mode=block"
Header always set Referrer-Policy "strict-origin-when-cross-origin"

# HTTPS redirect
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Clean URL routing - map clean paths to actual files
RewriteRule ^deals/?$ deals.html [NC,L]
RewriteRule ^blog/?$ blog.html [NC,L]
RewriteRule ^contact/?$ pages/contact.html [NC,L]
RewriteRule ^privacy-policy/?$ pages/privacy.html [NC,L]
RewriteRule ^affiliate-disclosure/?$ pages/affiliate-disclosure.html [NC,L]
RewriteRule ^terms-of-service/?$ pages/terms-of-service.html [NC,L]

# Category deal pages
RewriteRule ^deals/refurbished/?$ deals.html?category=refurbished [NC,L]
RewriteRule ^deals/smart-home/?$ deals.html?category=smart-home [NC,L]
RewriteRule ^deals/open-box/?$ deals.html?category=open-box [NC,L]
RewriteRule ^deals/trending/?$ deals.html?category=trending [NC,L]

# Remove trailing .html extension for other files
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^([^.]+)$ $1.html [NC,L]

# Clean URL redirects (301 redirects for SEO)
RewriteRule ^index\.html$ / [R=301,L]
RewriteRule ^home\.html$ / [R=301,L]
RewriteRule ^deals\.html$ /deals/ [R=301,L]
RewriteRule ^blog\.html$ /blog/ [R=301,L]
RewriteRule ^pages/index\.html$ / [R=301,L]
RewriteRule ^pages/deals\.html$ /deals/ [R=301,L]
RewriteRule ^pages/blog\.html$ /blog/ [R=301,L]
RewriteRule ^pages/contact\.html$ /contact/ [R=301,L]
RewriteRule ^pages/affiliate-disclosure\.html$ /affiliate-disclosure/ [R=301,L]
RewriteRule ^pages/privacy-policy\.html$ /privacy-policy/ [R=301,L]
RewriteRule ^pages/terms-of-service\.html$ /terms-of-service/ [R=301,L]
RewriteCond %{QUERY_STRING} ^category=refurbished$
RewriteRule ^deals.html$ /deals/refurbished/ [R=301,L]
RewriteCond %{QUERY_STRING} ^category=smart-home$
RewriteRule ^deals.html$ /deals/smart-home/ [R=301,L]
RewriteCond %{QUERY_STRING} ^category=open-box$
RewriteRule ^deals.html$ /deals/open-box/ [R=301,L]
RewriteCond %{QUERY_STRING} ^category=trending$
RewriteRule ^deals.html$ /deals/trending/ [R=301,L]

# Remove www redirect (optional - enforce non-www)
RewriteCond %{HTTP_HOST} ^www\.(.+)$ [NC]
RewriteRule ^(.*)$ https://%1/$1 [R=301,L]

# Compress files for better performance
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
</IfModule>

# Cache static files
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/pdf "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType application/x-javascript "access plus 1 month"
    ExpiresByType application/x-shockwave-flash "access plus 1 month"
    ExpiresByType image/x-icon "access plus 1 year"
    ExpiresDefault "access plus 2 days"
</IfModule>

# Error pages
ErrorDocument 404 /404.html
ErrorDocument 500 /500.html
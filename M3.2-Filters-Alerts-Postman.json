{
  "info": {
    "name": "DealRadarUS - M3.2 Filters & Alerts API",
    "description": "API endpoints for saved filters and alerts management in DealRadarUS",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3001",
      "type": "string"
    },
    {
      "key": "auth_token",
      "value": "{{YOUR_JWT_TOKEN}}",
      "type": "string"
    }
  ],

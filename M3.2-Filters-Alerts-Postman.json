              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/filters",
              "host": ["{{base_url}}"],
              "path": ["filters"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Electronics Under $500\",\n  \"criteria\": {\n    \"category\": \"electronics\",\n    \"keywords\": [\"laptop\", \"tablet\", \"phone\"],\n    \"min_price\": 50,\n    \"max_price\": 500,\n    \"location\": \"New York\",\n    \"condition\": \"used\"\n  },\n  \"is_active\": true\n}"
            }
          },
          "response": []
        },
        {
          "name": "Get All Filters",
          "request": {
            "method": "GET",

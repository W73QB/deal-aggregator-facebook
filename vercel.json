{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } }
  ],
  "rewrites": [
    { "source": "/api/deals", "destination": "/api/deals.js" },
    { "source": "/((?!api/|assets/|css/|js/|favicon.ico|robots.txt|sitemap.xml|.*\\..*).*)", "destination": "/index.html" }
  ]
}
{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "server/app.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/server/app.js" },
    { "source": "/((?!api/|assets/|css/|js/|favicon.ico|robots.txt|sitemap.xml|.*\\..*).*)", "destination": "/index.html" }
  ]
}
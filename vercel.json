      "has": [{ "type": "host", "value": "www.dealradarus.com" }],
      "destination": "https://dealradarus.com/$1",
      "permanent": true
    },
    {
      "source": "/(.*)",
      "has": [{ "type": "header", "key": "x-forwarded-proto", "value": "http" }],
      "destination": "https://dealradarus.com/$1",
      "permanent": true
    }

{
  "name": "deal-aggregator-facebook",
  "version": "0.1.0",
  "description": "Deal aggregator project for Facebook marketplace",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .js --fix",
    "format": "prettier --write .",
    "db:setup": "node server/database-setup.js",
    "db:test": "node -e \"console.log('Testing DB connection...'); require('./server/database-setup.js')\";",
    "dev": "node server/start-dev.js",
    "dev:backend": "node -r dotenv/config server/app.js dotenv_config_path=.env.dealradarus.local",
    "dev:frontend": "webpack serve --mode development",
    "dev:full": "concurrently \"npm:dev:backend\" \"npm:dev:frontend\"",
    "start": "node server/app.js",
    "test:auth": "node server/test/auth-flow-test.js",
    "build": "webpack --mode production",
    "build:static": "webpack --mode production && npm run build:copy-assets",
    "build:copy-assets": "cp *.html dist/ && cp robots.txt sitemap*.xml dist/ && cp favicon.ico dist/ && mkdir -p dist/pages && cp -r pages/* dist/pages/",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "test:e2e": "node server/test/e2e-launcher.js",
    "test:e2e:verbose": "E2E_VERBOSE=true node server/test/e2e-launcher.js",
    "test:e2e:backend-only": "node server/test/e2e-launcher.js --no-frontend --no-cypress",
    "audit:placeholders": "node tools/placeholder-audit.js --verbose",
    "audit:placeholders:fix": "node tools/placeholder-audit.js --verbose --fix",
    "audit:placeholders:report": "node tools/placeholder-audit.js --verbose --report PLACEHOLDER-AUDIT-REPORT.md",
    "audit:placeholders:ci": "node tools/placeholder-audit.js --report CI-PLACEHOLDER-AUDIT.md",
    "precommit:audit": "node tools/placeholder-audit.js"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.23.0",
    "@jest/globals": "^29.7.0",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "cypress": "^13.6.0",
    "eslint": "^8.57.0",
    "glob": "^11.0.3",
    "html-webpack-plugin": "^5.5.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.5",
    "prettier": "^3.1.0",
    "style-loader": "^3.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.0"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/deal-aggregator"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  },
  "keywords": [
    "deal",
    "aggregator",
    "facebook",
    "marketplace"
  ],
  "author": "Generated with Claude Code",
  "license": "MIT",
  "dependencies": {
    "@reduxjs/toolkit": "^2.0.0",
    "@sentry/node": "^10.7.0",
    "autocannon": "^8.0.0",
    "axios": "^1.11.0",
    "bcrypt": "^5.1.1",
    "compression": "^1.8.1",
    "concurrently": "^9.2.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dompurify": "^3.0.8",
    "dotenv": "^16.3.1",
    "etag": "^1.8.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.0.1",
    "form-data": "^4.0.4",
    "fresh": "^0.5.2",
    "handlebars": "^4.7.8",
    "helmet": "^7.0.0",
    "ioredis": "^5.7.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^4.2.1",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.5",
    "pg": "^8.16.3",
    "prom-client": "^15.1.3",
    "rate-limiter-flexible": "^4.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-redux": "^9.0.0",
    "start-server-and-test": "^2.0.13",
    "uuid": "^9.0.1",
    "winston": "^3.17.0"
  }
}

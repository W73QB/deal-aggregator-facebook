{
  "name": "deal-aggregator-facebook",
  "version": "0.1.0",
  "description": "Deal aggregator project for Facebook marketplace",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .js --fix",
    "format": "prettier --write .",
    "db:setup": "node server/database-setup.js",
    "db:test": "node -e \"console.log('Testing DB connection...'); require('./server/database-setup.js')\";",
    "dev": "next dev",
    "dev:backend": "node -r dotenv/config server/app.js dotenv_config_path=.env.dealradarus.local",
    "dev:frontend": "next dev",
    "dev:full": "concurrently \"npm:dev:backend\" \"npm:dev\"",
    "start": "next start",
    "test:auth": "node server/test/auth-flow-test.js",
    "build": "next build",
    "build:static": "next build && npm run build:copy-assets",
    "typecheck": "tsc --noEmit",
    "health-check": "node monitoring/health-check.js",
    "analyze": "ANALYZE=true npm run build",
    "clean": "rm -rf .next node_modules/.cache",
    "security-audit": "npm audit && npm audit fix",
    "deploy": "vercel --prod",
    "build:copy-assets": "cp robots.txt sitemap*.xml .next/static/ && cp favicon.ico public/ && cp -r assets public/",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "test:e2e": "node server/test/e2e-launcher.js",
    "test:e2e:verbose": "E2E_VERBOSE=true node server/test/e2e-launcher.js",
    "test:e2e:backend-only": "node server/test/e2e-launcher.js --no-frontend --no-cypress",
    "audit:placeholders": "node tools/placeholder-audit.js --verbose",
    "audit:placeholders:fix": "node tools/placeholder-audit.js --verbose --fix",
    "audit:placeholders:report": "node tools/placeholder-audit.js --verbose --report PLACEHOLDER-AUDIT-REPORT.md",
    "audit:placeholders:ci": "node tools/placeholder-audit.js --report CI-PLACEHOLDER-AUDIT.md",
    "precommit:audit": "node tools/placeholder-audit.js",
    "verify:deployment": "node scripts/post-deploy-verification.js",
    "purge:cache": "node scripts/vercel-purge-cache.js",
    "deploy:full": "npm run deploy && npm run purge:cache && sleep 15 && npm run verify:deployment https://dealradarus.com",
    "deploy:verify": "npm run deploy && npm run verify:deployment https://dealradarus.com"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.23.0",
    "@jest/globals": "^29.7.0",
    "autocannon": "^8.0.0",
    "cypress": "^13.6.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^15.5.3",
    "glob": "^11.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.1.2",
    "prettier": "^3.1.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "roots": [
      "<rootDir>/deal-aggregator"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  },
  "keywords": [
    "deal",
    "aggregator",
    "facebook",
    "marketplace"
  ],
  "author": "Generated with Claude Code",
  "type": "module",
  "license": "MIT",
  "dependencies": {
    "@reduxjs/toolkit": "^2.0.0",
    "@sentry/node": "^10.7.0",
    "axios": "^1.11.0",
    "bcrypt": "^5.1.1",
    "compression": "^1.8.1",
    "concurrently": "^9.2.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "critters": "^0.0.23",
    "crypto-js": "^4.2.0",
    "dompurify": "^3.0.8",
    "dotenv": "^16.3.1",
    "etag": "^1.8.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.0.1",
    "form-data": "^4.0.4",
    "fresh": "^0.5.2",
    "handlebars": "^4.7.8",
    "helmet": "^7.0.0",
    "ioredis": "^5.7.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "next": "^15.5.3",
    "node-cron": "^4.2.1",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.5",
    "pg": "^8.16.3",
    "prom-client": "^15.1.3",
    "rate-limiter-flexible": "^4.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^10.1.0",
    "react-redux": "^9.0.0",
    "react-router-dom": "^7.9.1",
    "start-server-and-test": "^2.0.13",
    "uuid": "^9.0.1",
    "winston": "^3.17.0"
  }
}

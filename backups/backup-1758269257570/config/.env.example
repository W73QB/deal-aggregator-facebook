# DealRadarUS Environment Configuration
# Copy to .env and fill in actual values

# Neon Postgres Database URLs
# Direct connection for migrations and batch operations
DATABASE_URL=postgres://USER:PASSWORD@ep-xxx.aws.neon.tech/neondb?sslmode=require

# Pooled connection for serverless/Edge functions (PgBouncer)
DATABASE_URL_POOLER=postgres://USER:PASSWORD@ep-xxx-pooler.aws.neon.tech/neondb?sslmode=require

# JWT Authentication
JWT_SECRET=YOUR_JWT_SECRET_MINIMUM_64_CHARACTERS_FOR_PRODUCTION_SECURITY
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=7d

# Email Configuration (for verification/password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=deals@dealradarus.com

# Application Settings
NODE_ENV=development
PORT=3001
FRONTEND_URL=https://dealradarus.com
ADMIN_EMAIL=deals@dealradarus.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration  
SESSION_SECRET=YOUR_SESSION_SECRET_MINIMUM_32_CHARACTERS_FOR_SECURITY
COOKIE_SECURE=true
COOKIE_SAME_SITE=strict

# Analytics & Monitoring Configuration
GA4_MEASUREMENT_ID=G-XXXXXXXXXX
GTM_CONTAINER_ID=GTM-XXXXXXX
SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx
MONITORING_ENABLED=true
LOG_LEVEL=info
METRICS_ENABLED=true
METRICS_PORT=9464
PRIVACY_DNT_RESPECT=true
CONSENT_DEFAULT=denied
ANALYTICS_ENABLED=true
ERROR_TRACKING_ENABLED=true
NOTIFICATIONS_ENABLED=true

# === M3.6 Notifications ===
NOTIFY_EMAIL_ENABLED=true
NOTIFY_WEBHOOK_ENABLED=false
DIGEST_ENABLED=true
QUIET_HOURS_LOCAL=true
QUIET_HOURS_START=22:00
QUIET_HOURS_END=07:00
ALERT_DELIVERY_MAX_PER_HOUR=200
ALERT_RETRY_MAX=5
ALERT_RETRY_BACKOFF_MS=30000
ALERT_DEDUP_WINDOW_MIN=60
ALERT_IDEMPOTENCY_TTL_H=48
WEBHOOK_SIGNATURE_SECRET=YOUR_WEBHOOK_SIGNATURE_SECRET_MINIMUM_32_CHARACTERS
EMAIL_FROM=alerts@dealradarus.com
EMAIL_SUBJECT_PREFIX=[DealRadarUS]
FRONTEND_BASE_URL=http://localhost:3000
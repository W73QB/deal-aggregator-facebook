# DealRadarUS - Email Infrastructure Configuration
# Copy this file to .env and update with your actual values

# Primary Email Configuration
EMAIL_FROM=deals@dealradarus.com
MAIL_FROM_ADDRESS=deals@dealradarus.com
SUPPORT_EMAIL=deals@dealradarus.com

# SMTP Configuration (SendGrid example)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=deals@dealradarus.com
SMTP_PASS=your_sendgrid_api_key
MAIL_ENCRYPTION=tls

# Alternative ESP Configuration
# Mailgun
MAILGUN_DOMAIN=dealradarus.com
MAILGUN_API_KEY=your_mailgun_api_key
MAILGUN_FROM=deals@dealradarus.com

# AWS SES
AWS_SES_REGION=us-east-1
AWS_SES_FROM=deals@dealradarus.com

# Contact Form Configuration
CONTACT_EMAIL_TO=deals@dealradarus.com
CONTACT_EMAIL_FROM=deals@dealradarus.com
CONTACT_EMAIL_REPLY_TO=deals@dealradarus.com

# reCAPTCHA Configuration
RECAPTCHA_SITE_KEY=REPLACE_WITH_YOUR_RECAPTCHA_SITE_KEY
RECAPTCHA_SECRET_KEY=REPLACE_WITH_YOUR_RECAPTCHA_SECRET_KEY

# ESP Provider Selection
ESP_PROVIDER=sendgrid
# Options: sendgrid, mailgun, ses

# Analytics & Tracking
GA4_MEASUREMENT_ID=G-XXXXXXXXXX
FACEBOOK_PIXEL_ID=123456789

# Application Settings
APP_NAME="DealRadarUS"
APP_URL=https://dealradarus.com
MAIL_FROM_NAME="DealRadarUS"

# Security Settings
NODE_ENV=production
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_MAX_REQUESTS=5
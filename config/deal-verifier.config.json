{
  "rateLimiting": {
    "requestsPerSecond": 2,
    "concurrency": 3,
    "retryAttempts": 3,
    "retryDelay": 1000
  },
  "timeout": {
    "requestTimeout": 10000,
    "userAgent": "DealRadarus-LinkChecker/1.0"
  },
  "affiliatePatterns": {
    "amazon": {
      "domains": ["amazon.com", "amazon.ca", "amazon.co.uk"],
      "requiredParams": ["tag"],
      "optionalParams": ["linkCode", "camp", "creative", "creativeASIN"]
    },
    "ebay": {
      "domains": ["ebay.com", "ebay.ca"],
      "requiredParams": ["mkcid", "campid"],
      "optionalParams": ["mkevt", "mkcid", "mkrid", "customid"]
    },
    "bestbuy": {
      "domains": ["bestbuy.com", "bestbuy.ca"],
      "requiredParams": ["ref"],
      "optionalParams": ["gclid", "irclickid"]
    },
    "woot": {
      "domains": ["woot.com"],
      "requiredParams": [],
      "optionalParams": ["ref"]
    }
  },
  "validation": {
    "allowedDomains": ["amazon.com", "amazon.ca", "amazon.co.uk", "ebay.com", "ebay.ca", "bestbuy.com", "bestbuy.ca", "woot.com"],
    "blockedDomains": ["dealradarus.com", "localhost", "127.0.0.1"],
    "checkRedirects": true,
    "validateSSL": true
  },
  "reporting": {
    "outputDir": "./data/verification-reports",
    "formats": ["json", "csv", "html"],
    "includeTimestamp": true,
    "includeDetails": true
  },
  "extraction": {
    "selectors": {
      "dealCards": ".deal-card",
      "buttons": "a[href*='amazon'], a[href*='ebay'], a[href*='bestbuy'], a[href*='woot']",
      "links": "a[href^='http']"
    },
    "htmlFiles": ["index.html", "deals.html", "pages/*.html", "blog/*.html"]
  }
}
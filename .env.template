# DealRadarUS Environment Template
# Copy to .env.dealradarus.local and fill with real values
# This file is safe to commit - contains NO real credentials

# ==============================================
# NEON POSTGRES CONNECTIONS
# ==============================================
DATABASE_URL=postgresql://neondb_owner:YOUR_PASSWORD@ep-your-host.aws.neon.tech/neondb?sslmode=require&channel_binding=require
DATABASE_URL_POOLER=postgresql://neondb_owner:YOUR_PASSWORD@ep-your-host-pooler.aws.neon.tech/neondb?sslmode=require&channel_binding=require

# ==============================================
# JWT AUTHENTICATION
# ==============================================
JWT_SECRET=YOUR_JWT_SECRET_MINIMUM_64_CHARACTERS_FOR_SECURITY
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=7d

# ==============================================
# EMAIL/SMTP CONFIGURATION
# ==============================================
SMTP_HOST=smtp.zoho.com
SMTP_PORT=587
SMTP_USER=deals@dealradarus.com
SMTP_PASS=YOUR_EMAIL_APP_PASSWORD
FROM_EMAIL=deals@dealradarus.com

# ==============================================
# APPLICATION SETTINGS
# ==============================================
NODE_ENV=development
PORT=3001
FRONTEND_URL=https://dealradarus.com
ADMIN_EMAIL=deals@dealradarus.com

# ==============================================
# SECURITY & RATE LIMITING
# ==============================================
SESSION_SECRET=YOUR_SESSION_SECRET_MINIMUM_32_CHARACTERS
COOKIE_SECURE=true
COOKIE_SAME_SITE=strict
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=300

# ==============================================
# ANALYTICS & MONITORING
# ==============================================
GA4_MEASUREMENT_ID=G-XXXXXXXXXX
GTM_CONTAINER_ID=GTM-XXXXXXX
SENTRY_DSN=
MONITORING_ENABLED=true
LOG_LEVEL=debug
ANALYTICS_ENABLED=true

# ==============================================
# ADDITIONAL SERVICES
# ==============================================
GITHUB_TOKEN=ghp_YOUR_GITHUB_PERSONAL_ACCESS_TOKEN
CRON_SECRET=YOUR_CRON_SECRET_KEY
REDIS_URL=rediss://default:YOUR_REDIS_PASSWORD@your-redis-host:6379
UPSTASH_REDIS_REST_URL=https://your-redis-endpoint.upstash.io
UPSTASH_REDIS_REST_TOKEN=YOUR_UPSTASH_TOKEN

# ==============================================
# FACEBOOK INTEGRATION
# ==============================================
FB_APP_ID=YOUR_FACEBOOK_APP_ID
FB_APP_SECRET=YOUR_FACEBOOK_APP_SECRET
FB_PAGE_ACCESS_TOKEN=YOUR_PAGE_ACCESS_TOKEN
FB_PAGE_ID=YOUR_PAGE_ID
FACEBOOK_WEBHOOK_VERIFY_TOKEN=YOUR_WEBHOOK_VERIFY_TOKEN